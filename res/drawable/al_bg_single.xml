            <solid android:color="@color/bg_card" />
            <corners android:topLeftRadius="@dimen/al_card_radius_big" android:topRightRadius="@dimen/al_card_radius_big" android:bottomLeftRadius="@dimen/al_card_radius_big" android:bottomRightRadius="@dimen/al_card_radius_big" />
